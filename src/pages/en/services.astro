---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import usingTools from "@images/using-tools.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Layanan Bantuan Hukum Gratis",
    subTitle:
      "Kami berkomitmen untuk menjamin akses keadilan bagi seluruh masyarakat. Layanan Bantuan Hukum Gratis kami memastikan warga tidak mampu tetap mendapatkan pendampingan hukum di pengadilan tanpa harus terbebani biaya.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Ilustrasi konsultasi bantuan hukum",
    imgTwo: personWorking,
    imgTwoAlt: "Diskusi penanganan kasus hukum"
  },
  {
    isRightSection: false,
    title: "Konsultasi Hukum Gratis",
    subTitle:
      "Punya masalah hukum? Kami menyediakan layanan konsultasi hukum gratis untuk perkara perdata, pidana, keluarga, hingga tata usaha negara. Konsultasikan persoalan Anda dengan para penyuluh hukum kami.",
    img: beforeAfter,
    imgAlt: "Konsultasi gratis dengan penasihat hukum",
    btnExists: true,
    btnTitle: "Ajukan Konsultasi",
    btnURL: "https://lsc.bphn.go.id/konsultasi"
  },
  {
    isRightSection: true,
    title: "Peningkatan Kompetensi Paralegal",
    subTitle:
      "Kami memperkuat akses keadilan dengan meningkatkan kapasitas para paralegal di seluruh Indonesia. Program pelatihan dan sertifikasi kami dirancang agar para paralegal mampu memberikan layanan hukum yang tepat dan efektif di komunitasnya.",
    single: false,
    imgOne: paralegal1,
    imgOneAlt: "Pelatihan untuk paralegal",
    imgTwo: paralegal2,
    imgTwoAlt: "Kegiatan workshop paralegal"
  },
  {
    isRightSection: false,
    title: "Peacemaker Justice Award",
    subTitle:
      "Kami memberikan penghargaan kepada individu atau organisasi yang berkontribusi besar dalam memperluas akses keadilan dan membangun perdamaian di masyarakat. Peacemaker Justice Award menjadi bentuk apresiasi atas dedikasi luar biasa mereka.",
    img: usingTools,
    imgAlt: "Upacara penghargaan pejuang akses keadilan"
  },
  {
    isRightSection: true,
    title: "Pos Bantuan Hukum (Posbankum)",
    subTitle:
      "Posbankum hadir di pengadilan dan berbagai wilayah pelosok untuk memberikan layanan langsung berupa informasi hukum, konsultasi, dan bantuan penyusunan dokumen hukum secara cuma-cuma. Mudah diakses, tanpa biaya.",
    single: false,
    imgOne: posbakum3,
    imgOneAlt: "Kanwil Kemenkum DK Jakarta dan BPHN Sosialisasikan Hak Hukum Atas Tanah dan Pembentukan Posbakum di Kelurahan Pondok Ranggon",
    imgTwo: posbakum4,
    imgTwoAlt: "Warga mendapatkan layanan Posbakum",
    btnExists: true,
    btnTitle: "Temukan Posbakum Terdekat",
    btnURL: "#"
  },
  {
    isRightSection: true,
    title: "Pembinaan Penyuluh Hukum",
    subTitle:
      "Kami melakukan pembinaan berkelanjutan bagi Jabatan Fungsional Penyuluh Hukum. Melalui pelatihan, pendampingan, dan penyediaan sarana digital, kami mendukung mereka dalam meningkatkan kesadaran dan literasi hukum di tengah masyarakat.",
    single: false,
    imgOne: penyuluh1,
    imgOneAlt: "Peluhmi",
    imgTwo: penyuluh2,
    imgTwoAlt: "Sesi pelatihan penyuluh hukum"
  }
];
---

<MainLayout
  title="Services | ScrewFast"
  lang="en"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/fr/services",
    url: "https://screwfast.uk/fr/services",
    name: "Services de Consultation d'Experts | ScrewFast",
    description:
      "Unissant l'expertise à votre vision, ScrewFast fournit un service exceptionnel et des solutions complètes dans le secteur du matériel et de la construction, de la consultation à l'achèvement du projet.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk/fr",
      name: "ScrewFast",
      description:
        "ScrewFast propose des outils matériels de premier ordre et des services de construction experts pour répondre à tous vos besoins de projet.",
    },
    inLanguage: "en",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Justice Access for All"
    subTitle="BPHN is committed to expanding the reach of legal services to the community through free legal aid, open legal consultations, paralegal training and competency development, Legal Aid Posts (Posbakum), and the development of the Functional Legal Counselor position. We also recognize contributions to peace through the Peacemaker Justice Award."
    btnExists={true}
    btnTitle="Explore Our Services"
    btnURL={getRelativeLocaleUrl("en", "#layanan")}
  />

  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
</MainLayout>
