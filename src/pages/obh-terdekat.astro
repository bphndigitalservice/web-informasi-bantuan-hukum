---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";

import { SITE } from "@data/constants";
import LegalAidOrganizationMap from "@/components/react/map/legal-aid-organization-map";


const pageTitle: string = `Cari OBH Terdekat | ${SITE.title}`;
const metaDescription =
  "Temukan Organisasi Bantuan Hukum (OBH) terdekat di wilayah Anda untuk mendapatkan layanan bantuan hukum gratis, konsultasi hukum, dan pendampingan hukum yang terpercaya.";

const ogTitle = "Temukan OBH Terdekat dan Dapatkan Bantuan Hukum Sekarang";;
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}

  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": `${SITE.url}/obh-terdekat`,
    url: `${SITE.url}/obh-terdekat`,
    name: "Peta OBH Terdekat",
    description:
      "Pencarian lokasi Organisasi Bantuan Hukum (OBH) terdekat yang menyediakan layanan bantuan hukum gratis, konsultasi, dan pendampingan hukum di seluruh Indonesia.",
    isPartOf: {
      "@type": "WebSite",
      url: `${SITE.url}`,
      name: "Badan Pembinaan Hukum Nasional",
      description:
        "Portal resmi Badan Pembinaan Hukum Nasional – Kementerian Hukum yang menyediakan informasi hukum, layanan bantuan hukum, dan pembinaan masyarakat sadar hukum."
    },
    inLanguage: "id-ID"
  }}
>
  {/* MainSection: pengantar layanan hukum BPHN */}
  <MainSection
    title="Butuh Bantuan Hukum? Lihat OBH Terdekat!"
    subTitle="Tidak perlu bingung cari bantuan hukum—OBH (Organisasi Bantuan Hukum) terdekat bisa bantu kamu secara gratis! Dari konsultasi hukum sampai pendampingan di pengadilan, semua bisa kamu akses lewat peta ini. Yuk, klik titik terdekat dan temui OBH yang siap bantu kamu."
    btnExists={false}
  />

  <LegalAidOrganizationMap client:only="react" />
</MainLayout>
