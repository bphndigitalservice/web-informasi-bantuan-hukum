---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";

// Import necessary images
import blueprints from "@images/services/bantuan-hukum.webp";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/services/konsultasi-hukum.png";
import posbakum3 from "@images/services/posbankum.webp";
import posbakum4 from "@images/services/posbakum_4.jpg";
import paralegal1 from "@images/services/paralegal_1.webp";
import paralegal2 from "@images/services/paralegal-nu.webp";
import penyuluh1 from "@images/services/penyuluhan-min.webp";
import penyuluh2 from "@images/services/penyuluh2.webp";
import usingTools from "@images/services/pja.webp";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Layanan Bantuan Hukum Gratis",
    subTitle:
      "Kami berkomitmen untuk menjamin akses keadilan bagi seluruh masyarakat. Layanan Bantuan Hukum Gratis kami memastikan warga tidak mampu tetap mendapatkan pendampingan hukum di pengadilan tanpa harus terbebani biaya.",
    single: true,
    imgOne: blueprints,
    imgOneAlt: "Ilustrasi konsultasi bantuan hukum",
    imgTwo: personWorking,
    imgTwoAlt: "Diskusi penanganan kasus hukum",
  },
  {
    isRightSection: false,
    title: "Konsultasi Hukum Gratis",
    subTitle:
      "Punya masalah hukum? Kami menyediakan layanan konsultasi hukum gratis untuk perkara perdata, pidana, keluarga, hingga tata usaha negara. Konsultasikan persoalan Anda dengan para penyuluh hukum kami.",
    img: beforeAfter,
    imgAlt: "Konsultasi gratis dengan penasihat hukum",
    btnExists: true,
    btnTitle: "Ajukan Konsultasi",
    btnURL: "https://literasihukum.bphn.go.id/konsultasi",
  },
  {
    isRightSection: true,
    title: "Peningkatan Kompetensi Paralegal",
    subTitle:
      "Kami memperkuat akses keadilan dengan meningkatkan kapasitas para paralegal di seluruh Indonesia. Program pelatihan dan sertifikasi kami dirancang agar para paralegal mampu memberikan layanan hukum yang tepat dan efektif di komunitasnya.",
    single: false,
    imgOne: paralegal1,
    imgOneAlt: "Pelatihan untuk paralegal",
    imgTwo: paralegal2,
    imgTwoAlt: "Kegiatan workshop paralegal",
  },
  {
    isRightSection: false,
    title: "Peacemaker Justice Award",
    subTitle:
      "Kami memberikan penghargaan kepada individu atau organisasi yang berkontribusi besar dalam memperluas akses keadilan dan membangun perdamaian di masyarakat. Peacemaker Justice Award menjadi bentuk apresiasi atas dedikasi luar biasa mereka.",
    img: usingTools,
    imgAlt: "Upacara penghargaan pejuang akses keadilan",
  },
  {
    isRightSection: true,
    title: "Pos Bantuan Hukum (Posbankum)",
    subTitle:
      "Posbankum hadir di pengadilan dan berbagai wilayah pelosok untuk memberikan layanan langsung berupa informasi hukum, konsultasi, dan bantuan penyusunan dokumen hukum secara cuma-cuma. Mudah diakses, tanpa biaya.",
    single: true,
    imgOne: posbakum3,
    imgOneAlt:
      "Kanwil Kemenkum DK Jakarta dan BPHN Sosialisasikan Hak Hukum Atas Tanah dan Pembentukan Posbakum di Kelurahan Pondok Ranggon",
    imgTwo: posbakum4,
    imgTwoAlt: "Warga mendapatkan layanan Posbankum",
    btnExists: true,
    btnTitle: "Temukan Posbakum Terdekat",
    btnURL: `${SITE.url}/posbankum-terdekat`,
  },
  {
    isRightSection: false,
    title: "Pedoman & SOP Posbankum",
    subTitle:
      "Unduh dokumen resmi Pedoman dan Standar Operasional Prosedur (SOP) Pos Bantuan Hukum untuk kebutuhan implementasi di lapangan.",
    img: posbakum3,
    imgAlt: "Unduhan Pedoman dan SOP Posbankum",
    btnExists: true,
    btnTitle: "Unduh Dokumen Posbankum",
    btnURL: "/posbankum-downloads",
  },
  {
    isRightSection: true,
    title: "Pembinaan Penyuluh Hukum",
    subTitle:
      "Kami melakukan pembinaan berkelanjutan bagi Jabatan Fungsional Penyuluh Hukum. Melalui pelatihan, pendampingan, dan penyediaan sarana digital, kami mendukung mereka dalam meningkatkan kesadaran dan literasi hukum di tengah masyarakat.",
    single: false,
    imgOne: penyuluh1,
    imgOneAlt: "Peluhmi",
    imgTwo: penyuluh2,
    imgTwoAlt: "Sesi pelatihan penyuluh hukum",
  },
];

const pageTitle: string = `Layanan | ${SITE.title}`;
const metaDescription =
  "Kami hadir untuk memperluas akses keadilan melalui layanan bantuan hukum gratis, konsultasi hukum, pelatihan paralegal, Posbakum, penghargaan Peacemaker Justice Award, dan pembinaan penyuluh hukum di seluruh Indonesia.";

const ogTitle = "Akses Keadilan untuk Semua";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": `${SITE.url}/https://bphn.go.id/services`,
    url: `${SITE.url}/https://bphn.go.id/services`,
    name: "Layanan Bantuan Hukum",
    description:
      "Kami hadir untuk memperluas akses keadilan melalui layanan bantuan hukum gratis, konsultasi hukum, pelatihan paralegal, Posbakum, penghargaan Peacemaker Justice Award, dan pembinaan penyuluh hukum di seluruh Indonesia.",
    isPartOf: {
      "@type": "WebSite",
      url: `${SITE.url}`,
      name: "Badan Pembinaan Hukum Nasional",
      description:
        "Portal resmi Badan Pembinaan Hukum Nasional â€“ Kementerian Hukum yang menyediakan informasi hukum, layanan bantuan hukum, dan pembinaan masyarakat sadar hukum.",
    },
    inLanguage: "id-ID",
  }}
>
  {/* MainSection: pengantar layanan hukum BPHN */}
  <MainSection
    title="Akses Keadilan untuk Semua"
    subTitle="BPHN berkomitmen untuk memperluas jangkauan layanan hukum kepada masyarakat melalui bantuan hukum gratis, konsultasi hukum terbuka, pelatihan dan peningkatan kompetensi paralegal, layanan Pos Bantuan Hukum (Posbakum), serta pembinaan Jabatan Fungsional Penyuluh Hukum. Kami juga mengapresiasi kontribusi perdamaian melalui Peacemaker Justice Award."
    btnExists={true}
    btnTitle="Lihat Semua Layanan"
    btnURL="#services-list"
  />

  <div class="-mt-6 mb-6 flex justify-center md:hidden">
    <a
      href="#services-list"
      class="group inline-flex flex-col items-center text-neutral-600 transition-colors hover:text-yellow-600 dark:text-neutral-400 dark:hover:text-yellow-400"
    >
      <span class="text-xs sm:text-sm">Gulir untuk melihat layanan</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="mt-1 h-6 w-6 animate-bounce"
      >
        <path
          d="M12 17a1 1 0 0 1-.707-.293l-6-6a1 1 0 0 1 1.414-1.414L12 14.586l5.293-5.293a1 1 0 0 1 1.414 1.414l-6 6A1 1 0 0 1 12 17Z"
        ></path>
      </svg>
    </a>
  </div>

  {
    /* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */
  }
  <div id="services-list"></div>
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <!--<FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At ScrewFast, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with ScrewFast as exceptional"
    stats=[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]
  />-->
</MainLayout>
